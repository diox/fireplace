@import 'lib';

#newsletter-footer {
    background: $navbar-gray;
    padding: 20px;
}

.newsletter {
    position: relative;

    form, .success {
        display: block;
        margin-left: auto;
        margin-right: auto;
        max-width: 690px;
    }

    .processing-hidden {
        visibility: hidden;
    }

    .success, .processing {
        display: none;
    }

    .processing {
        position: absolute;
        width: 100%;
        height: 100%;
        top: calc(unquote('50% - 30px'));
        right: 0;
        text-align: center;
    }

    .spinner {
        display: inline-block;
        margin: 0;
    }

    h3 {
        font-size: 20px;
        margin: 0 0 10px 0;
    }

    input, select, button {
        margin: 0 10px 10px 0;
    }

    input[type=email], select {
        background: $white;
        height: 36px;
        padding: 5px 6px;
        width: 100%;
    }

    input[type=email] {
        width: 50%;
    }

    #newsletter-details {
        display: none;
        width: 50%;
    }

    .privacy {
        clear: left;

        label {
            color: $black;
            font-weight: 400;
        }

        input {
            float: left;
            margin: 0 5px 5px 0;
        }
    }
}
